{
	"$schema": "https://railway.com/railway.schema.json",
	"build": {
		"builder": "DOCKERFILE",
		"dockerfilePath": "backend/Dockerfile",
		"watchPatterns": [
			"backend/**"
		]
	},
	"deploy": {
		"healthcheckPath": "/health",
		"healthcheckTimeout": 120,
		"restartPolicyType": "ON_FAILURE",
		"restartPolicyMaxRetries": 3,
		"numReplicas": 1
	}
}