{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "mdm_comics_backend/cron.Dockerfile",
    "watchPatterns": [
      "mdm_comics_cron_jobs/**",
      "mdm_comics_backend/app/**",
      "mdm_comics_backend/cron.Dockerfile"
    ]
  },
  "deploy": {
    "startCommand": "python run_cron.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "numReplicas": 1
  }
}
