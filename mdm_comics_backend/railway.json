{
	"$schema": "https://railway.com/railway.schema.json",
	"build": {
		"builder": "DOCKERFILE",
		"dockerfilePath": "mdm_comics_backend/api.Dockerfile",
		"dockerContext": "mdm_comics_backend",
		"watchPatterns": [
			"mdm_comics_backend/**"
		]
	},
	"deploy": {
		"healthcheckPath": "/health",
		"healthcheckTimeout": 120,
		"restartPolicyType": "ON_FAILURE",
		"restartPolicyMaxRetries": 3,
		"numReplicas": 1
	}
}
