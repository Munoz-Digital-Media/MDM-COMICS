{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "mdm_comics_backend/api.Dockerfile",
    "watchPatterns": [
      "mdm_comics_backend/app/**",
      "mdm_comics_backend/requirements.txt",
      "mdm_comics_backend/api.Dockerfile"
    ]
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "numReplicas": 1
  }
}
