{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "mdm_comics_frontend/Dockerfile",
    "watchPatterns": ["mdm_comics_frontend/**"]
  },
  "deploy": {
    "startCommand": "serve -s ./dist -l tcp://0.0.0.0:${PORT}",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "numReplicas": 1
  }
}
