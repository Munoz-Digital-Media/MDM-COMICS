{
  "$schema": "https://railway.com/railway.schema.json",
  "_deployTrigger": "2025-12-17T20:10:00Z",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "watchPatterns": ["src/**", "package.json", "vite.config.js", "Dockerfile", "railway.json"],
    "buildArgs": {
      "VITE_API_URL": "${{VITE_API_URL}}"
    }
  },
  "deploy": {
    "_deployTrigger": "2025-12-18T01:25:00Z",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "numReplicas": 1
  }
}
