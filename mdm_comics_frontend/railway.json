{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "watchPatterns": ["mdm_comics_frontend/src/**", "mdm_comics_frontend/package.json", "mdm_comics_frontend/vite.config.js", "mdm_comics_frontend/Dockerfile", "mdm_comics_frontend/railway.json"]
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "numReplicas": 1
  }
}
