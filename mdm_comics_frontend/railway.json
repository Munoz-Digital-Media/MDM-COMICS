{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "watchPatterns": ["src/**", "package.json", "vite.config.js", "Dockerfile", "railway.json"],
    "buildArgs": {
      "VITE_API_URL": "https://mdm-comics-backend-development.up.railway.app/api",
      "VITE_MIDDLEWARE_URL": "https://mdm-comics-middleware-development.up.railway.app",
      "CACHE_BUSTER": "v3-centralized-config-20241218"
    }
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "numReplicas": 1
  }
}
