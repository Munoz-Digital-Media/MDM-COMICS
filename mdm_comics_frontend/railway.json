{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "mdm_comics_frontend/Dockerfile",
    "watchPatterns": ["mdm_comics_frontend/src/**", "mdm_comics_frontend/package.json", "mdm_comics_frontend/server.js", "mdm_comics_frontend/Dockerfile"]
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "numReplicas": 1
  }
}
